<% layout('layout') -%>

<section class="content-header">
    <h1>
        <%= heading%>
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active"><%= heading%></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6 col-md-offset-3">
            <!-- duplicate-warning -->
            <div class="dup-warn box box-solid box-danger">
                <div class="box-header">
                    <h3 class="box-title">Oops!</h3>
                    <div class="box-tools pull-right">
                        <button class="btn btn-danger btn-sm" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        <button class="btn btn-danger btn-sm" data-widget="remove"><i class="fa fa-times"></i></button>
                    </div>
                </div>
                <div class="box-body">
                    <p>
                        Looks like there's already a Tracker with the MAC address you entered.
                    </p>
                </div><!-- /.box-body -->
            </div> <!-- /duplicate-warning -->

            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Tracker Details</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                <form role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="devicename">Device Name</label>
                            <input type="text" class="form-control" id="devicename" placeholder="Enter device name">
                        </div>
                        <div class="form-group">
                            <label for="devicemac">MAC</label>
                            <div class="row devicemac">
                                <div class="col-xs-2">
                                    <input type="text" class="form-control" id="devicemac" maxlength="2">
                                </div>
                                <div class="col-xs-2">
                                    <input type="text" class="form-control" id="devicemac" maxlength="2">
                                </div>
                                <div class="col-xs-2">
                                    <input type="text" class="form-control" id="devicemac" maxlength="2">
                                </div>
                                <div class="col-xs-2">
                                    <input type="text" class="form-control" id="devicemac" maxlength="2">
                                </div>
                                <div class="col-xs-2">
                                    <input type="text" class="form-control" id="devicemac" maxlength="2">
                                </div>
                                <div class="col-xs-2">
                                    <input type="text" class="form-control" id="devicemac" maxlength="2">
                                </div>
                            </div>
                        </div>
                    </div><!-- /.box-body -->

                    <div class="box-footer">
                        <button type="button" class="btn btn-primary" onclick="createTracker();">Submit</button>
                    </div>
                </form>
            </div><!-- /.box -->
        </div> <!-- .col-md-6 -->
    </div>   <!-- /.row -->
</section><!-- /.content -->
